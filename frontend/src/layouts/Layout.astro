---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Todo List App" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			// Apply theme before page renders to prevent flash
			(function () {
				const stored = localStorage.getItem('theme');
				const preferred = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
				document.documentElement.setAttribute('data-bs-theme', stored || preferred);
			})();
		</script>
	</head>
	<body>
		<header class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
			<div class="container">
				<a class="navbar-brand" href="/">Todo List</a>
				<button
					id="theme-toggle"
					class="btn btn-outline-light btn-sm ms-auto"
					aria-label="Toggle dark/light mode"
					title="Toggle dark/light mode"
				>
					<i class="bi bi-moon-fill" id="theme-icon"></i>
				</button>
			</div>
		</header>

		<main class="container">
			<slot />
		</main>

		<footer class="footer mt-auto py-3 bg-body-tertiary">
			<div class="container text-center">
				<span class="text-muted">Todo List App &copy; {new Date().getFullYear()}</span>
			</div>
		</footer>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		<script>
			function applyTheme(theme: string) {
				document.documentElement.setAttribute('data-bs-theme', theme);
				localStorage.setItem('theme', theme);
				const icon = document.getElementById('theme-icon');
				if (icon) {
					icon.className = theme === 'dark' ? 'bi bi-sun-fill' : 'bi bi-moon-fill';
				}
			}

			// Sync icon with current theme on load
			const currentTheme = document.documentElement.getAttribute('data-bs-theme') || 'light';
			applyTheme(currentTheme);

			document.getElementById('theme-toggle')?.addEventListener('click', () => {
				const current = document.documentElement.getAttribute('data-bs-theme') || 'light';
				applyTheme(current === 'dark' ? 'light' : 'dark');
			});
		</script>
	</body>
</html>

<style is:global>
	.footer {
		position: fixed;
		bottom: 0;
		width: 100%;
	}

	body {
		padding-bottom: 60px;
	}
</style>
